<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
             x:Class="McpClient.Views.McpService">
	<Panel>
		<Label FontSize="20" Margin="20,20,0,0">Services</Label>
		<Grid Margin="24,60,20,20" RowDefinitions="*,*,*" ColumnDefinitions="Auto,Auto,*">
            <TextBlock Grid.Column="0" Grid.Row="0" FontSize="14" Margin="0,6,20,0">NodeJS server</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="0" FontSize="14" Margin="0,6,20,0">Running</TextBlock>
            <Button Grid.Column="2" Grid.Row="0" Name="BtnRestartNodeJs" VerticalAlignment="Top">Restart</Button>

            <TextBlock Grid.Column="0" Grid.Row="1" FontSize="14" Margin="0,6,20,0">.Net server</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="1" FontSize="14" Margin="0,6,20,0">Running</TextBlock>
            <Button Grid.Column="2" Grid.Row="1" Name="BtnRestartDotNet" VerticalAlignment="Top">Restart</Button>

            <TextBlock Grid.Column="0" Grid.Row="2" FontSize="14" Margin="0,6,20,0">MCP server</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="2" FontSize="14" Margin="0,6,20,0">Running</TextBlock>
            <Button Grid.Column="2" Grid.Row="2" Name="BtnRestartMcp" VerticalAlignment="Top">Restart</Button>
        </Grid>
	</Panel>
</UserControl>
