<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        x:Class="McpClient.Views.RunStaticTaskWindow"
        Title="Run Task"
        Width="640" Height="480" Closing="Window_OnClosing"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Label Name="LbHeader" DockPanel.Dock="Top" FontSize="20" Margin="20,20,0,0">Run Group Task</Label>
        <TextBlock Name="TbDescription" DockPanel.Dock="Top" Margin="24,0,20,0" Foreground="{DynamicResource SystemBaseMediumHighColor}">Run Task Description..</TextBlock>
        <TextBox Name="TbQuery" DockPanel.Dock="Top" Margin="20,10,20,0" Height="100" VerticalAlignment="Top" AcceptsReturn="True" Watermark="Search database tables and save them to 'dbtables.txt'"/>
        <Button Name="BtnRun" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Click="BtnRun_OnClick" Margin="0,0,0,20">Run This Task!</Button>
		<ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,10,20,20">
            <TextBlock Name="TbOutput" TextWrapping="Wrap">Output log here</TextBlock>
        </ScrollViewer>
    </DockPanel>
</Window>
