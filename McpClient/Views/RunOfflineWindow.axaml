<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:McpClient.ViewModels"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="400"
        x:Class="McpClient.Views.RunOfflineWindow"
        Title="Run Local Workflow"
        Width="640" Height="480" Closing="Window_OnClosing" Loaded="Control_OnLoaded"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Label Name="LbHeader" DockPanel.Dock="Top" FontSize="20" Margin="20,20,0,0">Run Local:</Label>
        <TextBlock Name="TbDescription" DockPanel.Dock="Top" Margin="24,0,20,0" Foreground="{DynamicResource SystemBaseMediumHighColor}">Select a model:</TextBlock>
        <ComboBox Name="CbModelName" DockPanel.Dock="Top" Margin="20,10,20,0" MinWidth="200">
            <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="vm:ModelViewModel">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Icon}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox Name="TbPayload" DockPanel.Dock="Top" Margin="20,10,20,0" Height="80" VerticalAlignment="Top" AcceptsReturn="True" Watermark="Input your query here."></TextBox>
        <Button Name="BtnRun" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Click="BtnRun_OnClick" Margin="0,0,0,20">Run This Task!</Button>
        <ScrollViewer Name="OutputScroller" VerticalScrollBarVisibility="Auto" Margin="20,10,20,20">
            <TextBlock Name="TbOutput" TextWrapping="Wrap">Output log here</TextBlock>
		</ScrollViewer>
	</DockPanel>
</Window>
