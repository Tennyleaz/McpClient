<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="400"
        x:Class="McpClient.Views.RunOfflineWindow"
        Title="Run Local Workflow"
        Width="640" Height="480"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Label Name="LbHeader" DockPanel.Dock="Top" FontSize="20" Margin="20,20,0,0">Run Local:</Label>
        <TextBlock Name="TbDescription" DockPanel.Dock="Top" Margin="24,0,20,0" Foreground="{DynamicResource SystemBaseMediumHighColor}">Select a local model:</TextBlock>
        <ComboBox Name="CbModelName" DockPanel.Dock="Top" Margin="20,10,20,0" MinWidth="200"/>
        <Button Name="BtnRun" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Click="BtnRun_OnClick" Margin="0,0,0,20">Run This Task!</Button>
        <TextBlock Name="TbOutput" Margin="20,10,20,20" TextWrapping="Wrap">Output log here</TextBlock>
    </DockPanel>
</Window>
