<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:McpClient.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:McpClient.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="McpClient.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        MinWidth="960" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        Title="AI Nexus Client" Loaded="Control_OnLoaded" Closing="Window_OnClosing">
    <Panel>
        <StackPanel Orientation="Vertical" Name="LoginPanel" IsVisible="False" VerticalAlignment="Center">
            <views:Logo Height="80" Margin="16,16,16,20" HorizontalAlignment="Center" Width="200"/>
            <TextBlock Name="TbLogin" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource FontSizeMedium}">Loggin in AI Nexus...</TextBlock>
        </StackPanel>
        <views:MainView Name="MainView" LogoutClick="MainView_OnLogoutClick" IsVisible="True"/>
    </Panel>
</Window>
