<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="McpClient.App"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Resources>
        <FontFamily x:Key="FontAwesome">avares://McpClient/Assets/Font Awesome 7 Free-Regular-400.otf#Font Awesome 7 Free</FontFamily>
        <FontFamily x:Key="FontAwesomeSolid">avares://McpClient/Assets/Font Awesome 7 Free-Solid-900.otf#Font Awesome 7 Free</FontFamily>
        <!-- 字體大小層級 -->
        <x:Double x:Key="FontSizeDisplay">32</x:Double>
        <!-- 展示標題 -->
        <x:Double x:Key="FontSizeLarge">24</x:Double>
        <!-- 大標題 -->
        <x:Double x:Key="FontSizeMedium">18</x:Double>
        <!-- 中標題 -->
        <x:Double x:Key="FontSizeDefault">14</x:Double>
        <!-- 正文 -->
        <x:Double x:Key="FontSizeSmall">12</x:Double>
        <!-- 小文字 -->
        <x:Double x:Key="FontSizeCaption">10</x:Double>
        <!-- 說明文字 -->

        <!-- 字體權重 -->
        <FontWeight x:Key="FontWeightLight">Light</FontWeight>
        <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
        <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
        <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
        <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

        <!-- 基礎間距單位 (8px 為基準) -->
		<Thickness x:Key="SpaceXS">4</Thickness>
        <!-- 4px -->
		<Thickness x:Key="SpaceSM">8</Thickness>
        <!-- 8px -->
		<Thickness x:Key="SpaceMD">12</Thickness>
        <!-- 12px -->
		<Thickness x:Key="SpaceLG">16</Thickness>
        <!-- 16px -->
		<Thickness x:Key="SpaceXL">20</Thickness>
        <!-- 20px -->
        <Thickness x:Key="Space2XL">24</Thickness>
        <!-- 24px -->
		<Thickness x:Key="Space3XL">32</Thickness>
        <!-- 32px -->
		<Thickness x:Key="Space4XL">48</Thickness>
        <!-- 48px -->
		<Thickness x:Key="Space5XL">64</Thickness>
        <!-- 64px -->

        <!-- 特殊用途間距 -->
        <Thickness x:Key="PagePadding">32,24,32,24</Thickness>
        <!-- 頁面邊距 -->
        <Thickness x:Key="CardPadding">20,16,20,16</Thickness>
        <!-- 卡片內邊距 -->
        <Thickness x:Key="SectionPadding">0,0,0,32</Thickness>
        <!-- 區塊間距 -->
        <Thickness x:Key="FormFieldSpacing">0,0,0,16</Thickness>
        <!-- 表單欄位間距 -->

        <!-- AI 品牌色彩 -->
        <Color x:Key="AIGreen">#FF4CAF50</Color>
        <!-- AI 智能綠 -->
        <Color x:Key="AIGreenLight">#FF81C784</Color>
        <!-- 淺 AI 綠 -->
        <Color x:Key="AIGreenDark">#FF388E3C</Color>
        <!-- 深 AI 綠 -->

        <!-- 狀態色彩 -->
        <Color x:Key="SuccessColor">#FF4CAF50</Color>
        <!-- 成功綠 -->
        <Color x:Key="WarningColor">#FFFF9800</Color>
        <!-- 警告橙 -->
        <Color x:Key="ErrorColor">#FFF44336</Color>
        <!-- 錯誤紅 -->
        <Color x:Key="InfoColor">#FF2196F3</Color>
        <!-- 信息藍 -->
    </Application.Resources>
	<Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes><!-- 亮色主題 - 科技藍配色方案 -->
				<ColorPaletteResources x:Key="Light"
                    Accent="#ff007acc"
                    AltHigh="White"
                    AltLow="White"
                    AltMedium="White"
                    AltMediumHigh="White"
                    AltMediumLow="White"
                    BaseHigh="Black"
                    BaseLow="#ff64b5f6"
                    BaseMedium="#ff42a5f5"
                    BaseMediumHigh="#ff2196f3"
                    BaseMediumLow="#ff1e88e5"
                    ChromeAltLow="#ff1976d2"
                    ChromeBlackHigh="Black"
                    ChromeBlackLow="#ff64b5f6"
                    ChromeBlackMedium="#ff1976d2"
                    ChromeBlackMediumLow="#ff42a5f5"
                    ChromeDisabledHigh="#ffe0e0e0"
                    ChromeDisabledLow="#fff0f0f0"
                    ChromeGray="#ff9e9e9e"
                    ChromeHigh="#fffafafa"
                    ChromeLow="#fff5f5f5"
                    ChromeMedium="#ffeeeeee"
                    ChromeMediumLow="#fff8f8f8"
                    ChromeWhite="White"
                    ListLow="#fff8f8f8"
                    ListMedium="#ffeeeeee"
                    RegionColor="#ffffffff" />

				<!-- 暗色主題 - 深藍配色方案 -->
				<ColorPaletteResources x:Key="Dark"
                    Accent="#ff4fc3f7"
                    AltHigh="Black"
                    AltLow="Black"
                    AltMedium="Black"
                    AltMediumHigh="Black"
                    AltMediumLow="Black"
                    BaseHigh="White"
                    BaseLow="#ff263238"
                    BaseMedium="#ff37474f"
                    BaseMediumHigh="#ff455a64"
                    BaseMediumLow="#ff546e7a"
                    ChromeAltLow="#ff455a64"
                    ChromeBlackHigh="Black"
                    ChromeBlackLow="#ff263238"
                    ChromeBlackMedium="#ff37474f"
                    ChromeBlackMediumLow="#ff455a64"
                    ChromeDisabledHigh="#ff424242"
                    ChromeDisabledLow="#ff212121"
                    ChromeGray="#ff757575"
                    ChromeHigh="#ff1a1a1a"
                    ChromeLow="#ff0f0f0f"
                    ChromeMedium="#ff2a2a2a"
                    ChromeMediumLow="#ff1f1f1f"
                    ChromeWhite="Black"
                    ListLow="#ff151515"
                    ListMedium="#ff2a2a2a"
                    RegionColor="#ff0a0a0a" />
			</FluentTheme.Palettes>
		</FluentTheme>
		<StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
		<Style Selector="Border.Task">
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="BorderBrush" Value="{DynamicResource SystemChromeHighColor}"/>
			<Setter Property="Background" Value="{DynamicResource SystemListLowColor}"/>
		</Style>
		<Style Selector="TextBlock.MainFont">
			<Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
			<Setter Property="VerticalAlignment" Value="Bottom"/>
			<Setter Property="FontSize" Value="80"/>
			<Setter Property="Margin" Value="0,0,-20,-20"/>
			<Setter Property="Height" Value="80"/>
			<Setter Property="Foreground" Value="{DynamicResource SystemBaseMediumColor}"></Setter>
        </Style>
        <Style Selector="TextBlock.MainFontSolid">
            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSolid}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="FontSize" Value="80"/>
            <Setter Property="Margin" Value="0,0,-16,-20"/>
			<Setter Property="Padding" Value="0,10,0,0"></Setter>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseMediumColor}"></Setter>
        </Style>
        <Style Selector="TextBlock.MainFontSmall">
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeDefault}"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseMediumColor}"></Setter>
        </Style>

		<!-- 主要按鈕樣式 -->
		<Style Selector="Button.Primary">
			<Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Padding" Value="20,12" />
			<Setter Property="CornerRadius" Value="16" />
			<Setter Property="FontSize" Value="{StaticResource FontSizeDefault}" />
			<Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="MinHeight" Value="44" />

			<!-- 流暢動畫效果 -->
			<!--<Style.Animations>
				<Animation Duration="0:0:0.2">
					<KeyFrame Cue="0%">
						<Setter Property="TranslateTransform.Y" Value="0" />
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="TranslateTransform.Y" Value="-1" />
					</KeyFrame>
				</Animation>
			</Style.Animations>-->
		</Style>

		<!-- 主要按鈕狀態樣式 -->
		<Style Selector="Button.Primary:pointerover">
			<Setter Property="Background" Value="{DynamicResource AccentFillColorSecondary}" />
			<Setter Property="RenderTransform" Value="translateY(-1px)" />
		</Style>

		<Style Selector="Button.Primary:pressed">
			<Setter Property="Background" Value="{DynamicResource AccentFillColorTertiary}" />
			<Setter Property="RenderTransform" Value="translateY(0px)" />
		</Style>

		<Style Selector="Button.Primary:disabled">
			<Setter Property="Background" Value="{DynamicResource AccentFillColorDisabled}" />
			<Setter Property="Foreground" Value="{DynamicResource TextFillColorDisabled}" />
			<Setter Property="Opacity" Value="0.6" />
		</Style>

		<!-- 次要按鈕樣式 -->
		<Style Selector="Button.Secondary">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
			<Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
			<Setter Property="BorderThickness" Value="1.5" />
			<Setter Property="Padding" Value="20,12" />
			<Setter Property="CornerRadius" Value="16" />
			<Setter Property="FontSize" Value="{StaticResource FontSizeDefault}" />
			<Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="MinHeight" Value="40" />
		</Style>

		<Style Selector="Button.Secondary:pointerover">
			<Setter Property="Background" Value="{DynamicResource SubtleFillColorSecondary}" />
			<Setter Property="BorderBrush" Value="{DynamicResource AccentStrokeColorDefault}" />
		</Style>

		<Style Selector="Button.Secondary:pressed">
			<Setter Property="Background" Value="{DynamicResource SubtleFillColorTertiary}" />
		</Style>

		<!-- 幽靈按鈕樣式 -->
		<Style Selector="Button.Ghost">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondary}" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="16,8" />
			<Setter Property="CornerRadius" Value="12" />
			<Setter Property="FontSize" Value="{StaticResource FontSizeDefault}" />
			<Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="MinHeight" Value="36" />
		</Style>

		<Style Selector="Button.Ghost:pointerover">
			<Setter Property="Background" Value="{DynamicResource SubtleFillColorSecondary}" />
			<Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimary}" />
		</Style>

		<!-- 基本卡片樣式 -->
        <Style Selector="Border.LoginCard">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemChromeMediumColor}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="{StaticResource CardPadding}" />
            <Setter Property="Margin" Value="{StaticResource SpaceSM}" />
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000" />
        </Style>

        <!--<Style Selector="Border.LoginCard:pointerover">
            --><!--<Setter Property="Background" Value="Transparent" />--><!--
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="BoxShadow" Value="0 4 16 0 #18000000" />
            <Setter Property="RenderTransform" Value="translateY(-2px)" />
        </Style>-->

		<Style Selector="Border.Card">
			<Setter Property="Background" Value="{DynamicResource SystemListMediumColor}" />
			<Setter Property="BorderBrush" Value="{DynamicResource SystemChromeMediumColor}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="16" />
			<Setter Property="Padding" Value="{StaticResource CardPadding}" />
			<Setter Property="Margin" Value="{StaticResource SpaceSM}" />
			<Setter Property="BoxShadow" Value="0 2 8 0 #10000000" />

			<!--<Style.Animations>
				<Animation Duration="0:0:0.2" FillMode="Both">
					<KeyFrame Cue="0%">
						<Setter Property="RenderTransform" Value="translateY(0px)" />
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="RenderTransform" Value="translateY(-2px)" />
					</KeyFrame>
				</Animation>
			</Style.Animations>-->
		</Style>

		<Style Selector="Border.Card:pointerover">
			<!--<Setter Property="Background" Value="Transparent" />-->
			<Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
			<Setter Property="BoxShadow" Value="0 4 16 0 #18000000" />
			<Setter Property="RenderTransform" Value="translateY(-2px)" />
		</Style>

        <Style Selector="Border.CardFix">
            <Setter Property="Background" Value="{DynamicResource SystemListMediumColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemChromeMediumColor}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="{StaticResource CardPadding}" />
            <Setter Property="Margin" Value="{StaticResource SpaceSM}" />
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000" />
        </Style>

		<!-- 現代化輸入框樣式 -->
		<Style Selector="TextBox.Modern">
			<Setter Property="Background" Value="{DynamicResource TextControlBackground}" />
			<Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
			<Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrush}" />
			<Setter Property="BorderThickness" Value="1.5" />
			<Setter Property="Padding" Value="16,12" />
			<Setter Property="FontSize" Value="{StaticResource FontSizeDefault}" />
			<Setter Property="CornerRadius" Value="12" />
			<Setter Property="MinHeight" Value="44" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
		</Style>

		<Style Selector="TextBox.Modern:focus">
			<Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrush}" />
			<Setter Property="Background" Value="{DynamicResource TextControlBackgroundFocused}" />
		</Style>

		<Style Selector="TextBox.Modern:pointerover">
			<Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrushPointerOver}" />
			<Setter Property="Background" Value="{DynamicResource TextControlBackgroundPointerOver}" />
		</Style>

		<Style Selector="ListBox.MainList">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Margin" Value="20,0,20,0"/>
			<Style Selector="^ > ListBoxItem">
                <Setter Property="Margin" Value="0,4,0,4"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>
			<Style Selector="^ > ListBoxItem:selected">
                <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
			</Style>
			<Style Selector="^ > ListBoxItem:selected >> TextBlock">
				<Setter Property="Foreground" Value="{DynamicResource SystemAltHighColor}"/>
            </Style>
        </Style>
	</Application.Styles>
</Application>
